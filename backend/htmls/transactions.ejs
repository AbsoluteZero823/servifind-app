                 <th>Created At</th>
            </tr>
        </thead>
       <tbody>
  <% transactions.forEach((item) => { %>
    <tr>
      <td>
        <%= item._id %>
      </td>
        <td>
        <%= item._id %>
      </td>
      <td>
        <% 
          const dateObject = new Date(item.created_At);

          // Check if dateObject is valid before formatting
